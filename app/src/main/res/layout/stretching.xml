<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:text="스트레칭"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="left"
                android:text="스트레칭은 신체 부위의 근육이나, 건, 인대 등을 늘여주는 운동으로 관절의 가동범위 증가, 유연성 유지 및 향상, 상해 예방 등의 도움이 된다."
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/shoulder"
                />

            <Button
                android:id="@+id/stretching_shoulder_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_org"
                android:textColor="@color/whi"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="어 깨 " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arm" />

            <Button
                android:id="@+id/stretching_arm_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_org1"
                android:textColor="@color/turtlecolor"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="팔" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back" />

            <Button
                android:id="@+id/stretching_back_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_org"
                android:textColor="@color/whi"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="등" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/heori" />

            <Button
                android:id="@+id/stretching_waist_button"
                android:layout_width="match_parent"
                android:background="@drawable/button_org1"
                android:textColor="@color/turtlecolor"
                android:layout_height="45dp"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="허리" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/belly" />

            <Button
                android:id="@+id/stretching_stomach_button"
                android:layout_width="match_parent"
                android:background="@drawable/button_org"
                android:textColor="@color/whi"
                android:layout_height="45dp"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="복부" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/heo" />

            <Button
                android:id="@+id/stretching_thigh_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_org1"
                android:textColor="@color/turtlecolor"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="허벅지" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/heap" />

            <Button
                android:id="@+id/stretching_hip_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_org"
                android:textColor="@color/whi"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="엉덩이" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/calf" />

            <Button
                android:id="@+id/stretching_calf_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/button_org1"
                android:textColor="@color/turtlecolor"
                android:layout_marginBottom="2dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="종아리" />
        </TableRow>

    </TableLayout>
</LinearLayout>