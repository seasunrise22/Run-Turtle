<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.teamturtle.gnu.exercisescheduler.info.MainActivity"
    android:layout_margin="15dp"
    android:padding="10dp">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="2.66"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/button_listshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:layout_marginRight="3dp"
            android:background="@drawable/button_org"
            android:textColor="@color/whi"
            android:text="먹은 음식" />

        <Button
            android:id="@+id/button_calculation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.51"
            android:background="@drawable/button_org1"
            android:textColor="@color/turtlecolor"
            android:text="계 산" />
    </LinearLayout>

</LinearLayout>